generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
enum TipoUsuario {
  NORMAL
  LIDER
  ADMIN
}

enum TipoEvento {
  CULTO
  EVENTO
}

enum StatusSolicitacao {
  PENDENTE
  APROVADO
  REPROVADO
}

enum Dias {
  SEGUNDA
  TERCA
  QUARTA
  QUINTA
  SEXTA
  SABADO
  DOMINGO
}

model Ministerio {
  id                   String                @id @default(cuid())
  nome                 String                @unique
  descricao            String
  membros              MembrosMinisterios[]
  lideres              MinisterioLider[]
  atividadesMinisterio AtividadeMinisterio[]
  eventosMinisterio    EventoMinisterio[]
  participacoes        Participacao[]
}



model Atividade {
  id                   String                @id @default(cuid())
  nome                 String                @unique
  descricao            String
  ministerio_id        String
  quantidadeMembros    Int
  atividadesMinisterio AtividadeMinisterio[]
}


model Usuario {
  id                 String               @id @default(cuid())
  nome               String
  endereco           String
  telefone           String
  email              String               @unique
  dataNascimento     DateTime
  senha              String
  tipoUsuario        TipoUsuario          @default(NORMAL)
  membrosMinisterios MembrosMinisterios[]
  liderDe            MinisterioLider[]
  participacoes      Participacao[]
}

model Eventos {
  id            String             @id @default(cuid())
  nome          String
  data          DateTime?
  tipoEvento    TipoEvento         @default(CULTO)
  hora_inicio   DateTime?
  hora_fim      DateTime?
  descricao     String?
  isRecorrente  Boolean            @default(false)
  ministerios   EventoMinisterio[]
  participacoes Participacao[]
  diaSemana     DiaSemana[]
}

model DiaSemana {
  id            String  @id @default(cuid())
  evento_id     String
  evento        Eventos @relation(fields: [evento_id], references: [id])
  dia_semana    Dias
}
model Participacao {
  id            String     @id @default(cuid())
  evento_id     String
  usuario_id    String
  ministerio_id String
  evento        Eventos    @relation(fields: [evento_id], references: [id])
  usuario       Usuario    @relation(fields: [usuario_id], references: [id])
  ministerio    Ministerio @relation(fields: [ministerio_id], references: [id])
  hora_chegada  DateTime
  hora_saida    DateTime
  data          DateTime
  mes           String
}

model EventoMinisterio {
  id            String     @id @default(cuid())
  evento_id     String
  ministerio_id String
  evento        Eventos    @relation(fields: [evento_id], references: [id])
  ministerio    Ministerio @relation(fields: [ministerio_id], references: [id])
}

model AtividadeMinisterio {
  id            String     @id @default(cuid())
  atividade_id  String
  ministerio_id String
  atividade     Atividade  @relation(fields: [atividade_id], references: [id])
  ministerio    Ministerio @relation(fields: [ministerio_id], references: [id])
}

model MinisterioLider {
  ministerio_id String
  lider_id      String
  lider         Usuario    @relation(fields: [lider_id], references: [id])
  ministerio    Ministerio @relation(fields: [ministerio_id], references: [id])

  @@id([ministerio_id, lider_id])
}


model MembrosMinisterios {
  id                     String            @id @default(cuid())
  ministerio_id          String
  usuario_id             String
  preferenciasAtividades Json
  ministerio             Ministerio        @relation(fields: [ministerio_id], references: [id])
  usuario                Usuario           @relation(fields: [usuario_id], references: [id])
  statusSolicitacao      StatusSolicitacao @default(PENDENTE)
}