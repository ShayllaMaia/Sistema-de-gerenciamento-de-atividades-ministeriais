// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

// Use a configuração mongodb para o provedor de dados
datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// Altere o tipo de dados do campo `id` para `String` para acomodar UUIDs
model Usuario {
  id              String    @id @default(auto()) @map("_id") @db.ObjectId
  nome            String
  email           String    @unique
  senha           String
  telefone        String
  endereco        String
  dataNascimento  DateTime
}
