// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

// Use a configuração mysql para o provedor de dados
datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// Mantenha o tipo de dados do campo `id` como `String` para acomodar UUIDs
model Usuario {
  id   Int                   @id @default(autoincrement())
  nome            String
  email           String    @unique
  senha           String
  telefone        String
  endereco        String
  dataNascimento  DateTime
}
